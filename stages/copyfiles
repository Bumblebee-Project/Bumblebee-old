#!/bin/bash
install_dir 755 "$CONFDIR"
install_file 644 bumblebee.conf "$CONFDIR"
install_file 644 xorg.conf.nvidia "$CONFDIR"

install_dir 755 "$LIBDIR"
install_file 644 common-paths "$LIBDIR"
install_file 644 common-functions "$LIBDIR"

install_dir 755 "$LIBDIR/drivers"

install_file 755 bumblebee "$SBINDIR"

install_file 755 optirun "$BINDIR"
install_file 755 bumblebee-bugreport "$BINDIR"

install_file 755 bumblebee.handler "$INITDIR/bumblebee"

#install_dir 755 /etc/bash_completion.d
#install_file 644 optirun.bash_completion /etc/bash_completion.d/optirun

# whenever possible, the below scripts should be integrated in a package manager
install_file 755 bumblebee-uninstall "$BINDIR"
install_file 755 bumblebee-configuration "$BINDIR"
