#!/bin/bash

# Repair GL on the intel display

# Multiarch X server on a 32bit Ubuntu does not have a x86_64 mesa ld.so
X_ARCH=i386-linux-gnu
$IS_64 && X_ARCH="$X_ARCH x86_64-linux-gnu"

for arch in $X_ARCH; do
        # check if the link exist to prevent error messages
        if update-alternatives --list ${arch}_gl_conf >/dev/null 2>&1; then
            update-alternatives --force --set ${arch}_gl_conf /usr/lib/$arch/mesa/ld.so.conf
        fi
done

# versions before Oneiric without multiarch
if update-alternatives --list gl_conf >/dev/null 2>&1; then
    update-alternatives --force --set gl_conf /usr/lib/mesa/ld.so.conf
fi

ldconfig

# Install the service
update-rc.d bumblebee defaults

# Start the bumblebee daemon
/etc/init.d/bumblebee start || true

# Detect the monitor.
# This is using nvidia-xconfig for now, but we're looking for
# a better way.

if lsmod | grep -q nouveau; then
    ${MODPROBE} -r nouveau
fi

if ! lsmod | grep -q nvidia; then
    ${MODPROBE} $DRIVER_TO_MODPROBE
fi

query_info=$(LD_LIBRARY_PATH=$X_LD_LIBRARY_PATH $X_LD_LIBRARY_PATH/bin/nvidia-xconfig --query-gpu-info)

if [ $(grep "Display Devices" <<<"$query_info" | cut -d: -f2) -gt 0 ]; then
    echo "Setting ConnectedMonitor in xorg.conf.nvidia"
    CONNECTEDMONITOR=$(grep "Display Device 0" <<< "$query_info " | cut -d\( -f2 | cut -d\) -f1)
    sed -i 's/DFP,CRT/'$CONNECTEDMONITOR'/g' "$CONFDIR/xorg.conf.nvidia"
else
    echo "Bumblebee wasn't able to determine whether your monitor is CRT or DFP."
    echo "Please report this bug."
fi
